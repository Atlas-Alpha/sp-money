{
	"name": "@storepass/money",
	"version": "0.1.2",
	"description": "Money primitive library",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.cjs"
			}
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "bun run build:esm && bun run build:cjs && bun run build:types",
		"build:esm": "bun build ./src/index.ts --outfile ./dist/index.js --format esm --target node",
		"build:cjs": "bun build ./src/index.ts --outfile ./dist/index.cjs --format cjs --target node",
		"build:types": "tsc -p tsconfig.build.json",
		"test": "bun test",
		"typecheck": "tsc --noEmit",
		"check": "biome check --write .",
		"format": "biome format --write .",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write ."
	},
	"license": "MIT",
	"author": "darling (https://github.com/darling)",
	"repository": {
		"type": "git",
		"url": "https://github.com/storepass/sp-money"
	},
	"homepage": "https://github.com/storepass/sp-money#readme",
	"bugs": {
		"url": "https://github.com/storepass/sp-money/issues"
	},
	"keywords": [
		"money",
		"currency",
		"finance"
	],
	"engines": {
		"node": ">=16"
	},
	"publishConfig": {
		"registry": "https://registry.npmjs.org",
		"access": "public"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"@types/bun": "latest",
		"typescript": "^5.9.3"
	}
}
