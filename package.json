{
  "name": "sp-money",
  "version": "0.0.1",
  "description": "Money primitive library",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "bun run build:cjs && bun run build:types",
    "build:cjs": "bun build ./src/index.ts --outfile ./dist/index.cjs --format cjs --target node",
    "build:types": "tsc -p tsconfig.build.json",
    "test": "bun test",
    "typecheck": "tsc --noEmit"
  },
  "engines": {
    "node": ">=16"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5"
  }
}
