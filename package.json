{
	"name": "@atlas-alpha/sp-money",
	"version": "0.0.1-alpha.3",
	"description": "Money primitive library",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.cjs"
			}
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "bun run build:esm && bun run build:cjs && bun run build:types",
		"build:esm": "bun build ./src/index.ts --outfile ./dist/index.js --format esm --target node",
		"build:cjs": "bun build ./src/index.ts --outfile ./dist/index.cjs --format cjs --target node",
		"build:types": "tsc -p tsconfig.build.json",
		"test": "bun test",
		"typecheck": "tsc --noEmit",
		"check": "biome check --write .",
		"format": "biome format --write .",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write ."
	},
	"engines": {
		"node": ">=16"
	},
	"publishConfig": {
		"registry": "https://npm.pkg.github.com"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"@types/bun": "latest",
		"typescript": "^5"
	}
}
